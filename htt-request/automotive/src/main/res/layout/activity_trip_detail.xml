<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".TripDetailActivity"> <!-- Adapte o context se necessário -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_trip_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"> <!-- Adiciona padding para compatibilidade de sombras -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título do Card / Número da Viagem -->
            <TextView
                android:id="@+id/text_view_trip_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viagem Nº:"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/text_view_trip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="9869"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- Placa do Veículo -->
            <TextView
                android:id="@+id/text_view_license_plate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa:"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/text_view_license_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="33-CC-33"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="12dp"/>

            <!-- Detalhes em duas colunas (usando LinearLayout aninhado ou ConstraintLayout) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_distance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distância Total:"
                        android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    <TextView
                        android:id="@+id/text_view_total_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11.06 km"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_view_start_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Início:"
                        android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    <TextView
                        android:id="@+id/text_view_start_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="29/05/2025 10:30:00"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_view_duration_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duração Total:"
                        android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    <TextView
                        android:id="@+id/text_view_total_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="24 min 43 seg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_view_end_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fim:"
                        android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    <TextView
                        android:id="@+id/text_view_end_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="29/05/2025 10:54:43"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Custo Total -->
            <TextView
                android:id="@+id/text_view_total_cost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custo Total:"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/text_view_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="€ 0.00"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textStyle="bold"/>

            <!-- Seção de "Trip Legs" (se houver e você quiser mostrar) -->
            <!-- Você pode adicionar um RecyclerView aqui dentro ou outra forma de listar os trip legs -->
            <TextView
                android:id="@+id/text_view_trip_legs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segmentos da Viagem (Trip Legs):"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:layout_marginTop="16dp"
                android:visibility="gone"/> <!-- Deixe gone inicialmente, mostre se houver dados -->

            <TextView
                android:id="@+id/text_view_trip_legs_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nenhum segmento registrado."
                android:textAppearance="?attr/textAppearanceBody2"
                android:visibility="gone"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Placeholder para quando estiver carregando -->
    <TextView
        android:id="@+id/text_view_loading_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carregando detalhes..."
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"/> <!-- Começa invisível, mostre enquanto carrega -->

</LinearLayout>
